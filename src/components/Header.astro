---
const currentPath = Astro.url.pathname;
const isActive = (path: string) => currentPath === path || currentPath.startsWith(path + '/');
---

<header class="fixed top-0 left-0 right-0 z-50 glass-effect border-b border-border backdrop-blur-md">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="text-2xl font-bold text-fg hover:text-accent transition-colors">
        Ghost-Note
      </a>
      
      <div class="hidden md:flex items-center gap-8">
        <a 
          href="/" 
          class={`text-sm font-medium transition-colors ${
            isActive('/') ? 'text-accent' : 'text-muted hover:text-fg'
          }`}
        >
          Accueil
        </a>
        <a 
          href="/vision" 
          class={`text-sm font-medium transition-colors ${
            isActive('/vision') ? 'text-accent' : 'text-muted hover:text-fg'
          }`}
        >
          Vision
        </a>
        <div class="relative group">
          <button 
            class={`text-sm font-medium transition-colors flex items-center gap-1 ${
              isActive('/formats') ? 'text-accent' : 'text-muted hover:text-fg'
            }`}
          >
            Formats
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="absolute top-full left-0 mt-2 w-48 bg-bg border border-fg/10 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            <a href="/formats" class="block px-4 py-2 text-sm text-fg hover:bg-fg/5">Tous les formats</a>
            <a href="/formats/cdmc" class="block px-4 py-2 text-sm text-fg hover:bg-fg/5">CDMC</a>
            <a href="/formats/ateliers" class="block px-4 py-2 text-sm text-fg hover:bg-fg/5">Ateliers</a>
            <a href="/formats/cours-individuels" class="block px-4 py-2 text-sm text-fg hover:bg-fg/5">Cours individuels</a>
            <a href="/formats/tutorat-ableton" class="block px-4 py-2 text-sm text-fg hover:bg-fg/5">Tutorat Ableton</a>
          </div>
        </div>
        <a 
          href="/agenda" 
          class={`text-sm font-medium transition-colors ${
            isActive('/agenda') ? 'text-accent' : 'text-muted hover:text-fg'
          }`}
        >
          Agenda
        </a>
        <a 
          href="/contact" 
          class={`text-sm font-medium transition-colors ${
            isActive('/contact') ? 'text-accent' : 'text-muted hover:text-fg'
          }`}
        >
          Contact
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <button class="md:hidden text-fg hover:text-accent transition-colors" id="mobile-menu-button" aria-label="Menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile menu -->
    <div class="md:hidden hidden mt-4 pb-4" id="mobile-menu">
      <div class="flex flex-col gap-4">
        <a href="/" class="text-sm font-medium text-fg-muted hover:text-accent transition-colors">Accueil</a>
        <a href="/vision" class="text-sm font-medium text-fg-muted hover:text-accent transition-colors">Vision</a>
        <a href="/formats" class="text-sm font-medium text-fg-muted hover:text-accent transition-colors">Formats</a>
        <a href="/agenda" class="text-sm font-medium text-fg-muted hover:text-accent transition-colors">Agenda</a>
        <a href="/contact" class="text-sm font-medium text-fg-muted hover:text-accent transition-colors">Contact</a>
      </div>
    </div>
  </nav>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  
  if (button && menu) {
    button.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>

