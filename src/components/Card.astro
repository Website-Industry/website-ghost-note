---
interface Props {
  href?: string;
  title: string;
  description?: string;
  class?: string;
}

const { href, title, description, class: className = '' } = Astro.props;
---

{href ? (
  <a 
    href={href}
    class={`block p-6 rounded-lg border border-fg/10 hover:border-accent/50 hover:shadow-lg transition-all duration-200 ${className}`}
  >
    <h3 class="text-xl font-semibold text-fg mb-2">{title}</h3>
    {description && <p class="text-muted">{description}</p>}
    <slot />
  </a>
) : (
  <div class={`block p-6 rounded-lg border border-fg/10 ${className}`}>
    <h3 class="text-xl font-semibold text-fg mb-2">{title}</h3>
    {description && <p class="text-muted">{description}</p>}
    <slot />
  </div>
)}

