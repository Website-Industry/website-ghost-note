---
import ParallaxImage from './ParallaxImage.astro';

interface Props {
  image: string;
  alt: string;
  title: string;
  content: string;
  imagePosition?: 'left' | 'right';
  speed?: number;
}

const { image, alt, title, content, imagePosition = 'left', speed = 0.4 } = Astro.props;
---

<section class="relative min-h-[80vh] flex items-center">
  <div class={`grid grid-cols-1 lg:grid-cols-2 gap-0 w-full ${imagePosition === 'right' ? 'lg:flex-row-reverse' : ''}`}>
    <div class="relative h-[50vh] lg:h-[80vh] overflow-hidden">
      <ParallaxImage 
        src={image}
        alt={alt}
        speed={speed}
        class="h-full"
      />
    </div>
    <div class="flex items-center justify-center p-12 lg:p-16 bg-bg-secondary">
      <div class="max-w-xl">
        <h2 class="text-4xl md:text-5xl font-bold text-fg mb-6 text-balance">
          {title}
        </h2>
        <div class="prose prose-lg text-fg-muted space-y-4">
          <p>{content}</p>
        </div>
      </div>
    </div>
  </div>
</section>

