---
const formats = [
  {
    title: 'CDMC',
    description: 'Cours de Musique Chill - Format collectif autonome',
    href: '/formats/cdmc',
  },
  {
    title: 'Ateliers',
    description: 'Rythmique & chant improvisé',
    href: '/formats/ateliers',
  },
  {
    title: 'Cours individuels',
    description: 'Théorie, rythmique, MAO',
    href: '/formats/cours-individuels',
  },
  {
    title: 'Tutorat Ableton',
    description: 'Interventions via Sawup',
    href: '/formats/tutorat-ableton',
  },
];
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
  {formats.map((format) => (
    <a 
      href={format.href}
      class="block p-8 rounded-xl glass-effect border border-border hover:border-accent hover:glow transition-all duration-300 group transform hover:-translate-y-1"
    >
      <h3 class="text-2xl font-semibold text-fg mb-3 group-hover:text-accent transition-colors">
        {format.title}
      </h3>
      <p class="text-fg-muted mb-4">{format.description}</p>
      <span class="text-sm text-accent font-medium group-hover:underline inline-flex items-center gap-2">
        Découvrir
        <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </span>
    </a>
  ))}
</div>

